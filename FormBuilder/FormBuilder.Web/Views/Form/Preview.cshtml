@model FormBuilder.Domain.Entities.FormDetails
@{
    Layout = "_FormLayout";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">Preview Form</h2>
        <a href="/Form/Index" class="btn btn-secondary btn-sm">Back</a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">@Model.Title</h5>
        </div>

        <div class="card-body">

            @foreach (var f in Model.Fields.OrderBy(x => x.OrderNo))
            {
                <div class="mb-4 p-3 border rounded bg-light">
                    <label class="fw-semibold mb-2 d-block">
                        @f.Label
                        @if (f.IsRequired)
                        {
                            <span class="text-danger">*</span>
                        }
                    </label>
                    <select class="form-select" disabled>
                        <option value="Option 1" selected="@(f.SelectedValue == "Option 1")">Option 1</option>
                        <option value="Option 2" selected="@(f.SelectedValue == "Option 2")">Option 2</option>
                        <option value="Option 3" selected="@(f.SelectedValue == "Option 3")">Option 3</option>
                    </select>
                </div>
            }

        </div>
    </div>
</div>
